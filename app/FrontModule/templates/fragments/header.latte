<header class="Header bg-_yellow sticky top-0 z-10 ">
    <div class="Container">
        <div class="Row">
            <div class="Col w-full flex items-center md:justify-between py-2 gap-x-5 md:gap-x-10">
                <a href="/" class="flex-shrink-0"><img src="/assets/gfx/logo.png" class="h-14" alt="" /></a>
                {* Desktop *}
                <div class="hidden md:block flex-grow">
                    <form action="" class="mx-auto max-w-lg flex ">
                        <input type="text" class="border-0 focus-visible:outline-none focus:ring-2 pr-12 ring-_black ring-offset-1 block w-full py-2.5 px-3 rounded-md" placeholder="Hledat v inzerátech..." />
                        <button class=" rounded-md  px-3 -ml-12">
                              {='assets/gfx/svg/icon-search.svg'|svg:'w-8 h-8'|noescape}
                        </button>
                    </form>
                </div>
        
                <nav class="text-_black flex-shrink-0 flex-grow md:flex-grow-0">
                    <ul class="flex items-center gap-x-0 md:gap-x-6">
                        {* <li><a href="" class="Btn px-0">Prodám</a></li>
                        <li><a href="" class="Btn px-0">Koupím</a></li> *}
                        <li class="ml-auto mr-auto"><a href="" class="Btn -Black">Vložit inzerát</a></li>
                        
                        {* Mobile *}
                         <li x-data="{ opened: false }" class="">
                                   
                            <button @click="opened = !opened" class=" rounded-md  px-3">
                                {='assets/gfx/svg/icon-search.svg'|svg:'w-8 h-8 relative top-1'|noescape}
                            </button>

                            <div @click.away="opened = false" x-show="opened" style="display: none" x-transition class="bg-white top-full mt-0 shadow absolute rounded-md py-2 px-4 left-0 right-0">
                                <form action="" class="mx-auto max-w-lg flex ">
                                    <input type="text" class="border-0 focus-visible:outline-none focus:ring-2 pr-12 ring-_black ring-offset-1 block w-full py-2.5 px-3 rounded-md" placeholder="Hledat v inzerátech..." />
                                    <button class=" rounded-md  px-3 -ml-12">
                                        {='assets/gfx/svg/icon-search.svg'|svg:'w-8 h-8'|noescape}
                                    </button>
                                </form>
                            </div>
                            
                        </li>
                        
                        {if isset($_GET['logged'])}
                            <li x-data="{ opened: false }" class="relative">
                                <span @click="opened = !opened" class="Btn px-0 inline-flex items-center gap-x-2">
                                    {='assets/gfx/svg/icon-user.svg'|svg:'w-8 h-8 md:w-5 md:h-5'|noescape}
                                    PB.
                                    {='assets/gfx/svg/icon-chevron-down.svg'|svg:'w-5 h-5 -ml-1'|noescape}
                                    
                                </span>

                                <div @click.away="opened = false" x-show="opened" style="display: none" x-transition class="bg-white top-full mt-2 shadow absolute rounded-md py-2 px-4 min-w-[180px] right-0">
                                    <ul>
                                        <li><a class="text-sm flex items-center gap-x-2 py-1 hover:underline" href="">
                                            {='assets/gfx/svg/icon-list.svg'|svg:'w-4 h-4'|noescape}
                                            Moje inzeráty
                                            </a></li>
                                        <li><a class="text-sm flex items-center gap-x-2 py-1 hover:underline" href="">
                                            {='assets/gfx/svg/icon-heart-empty.svg'|svg:'w-4 h-4'|noescape}
                                            Oblíbené
                                            </a></li>
                                        <li><a class="text-sm flex items-center gap-x-2 py-1 hover:underline" href="">
                                            {='assets/gfx/svg/icon-cog.svg'|svg:'w-4 h-4'|noescape}
                                            Nastavení
                                            </a></li>
                                        <li><a class="text-sm flex items-center gap-x-2 py-1 hover:underline" href="">
                                            {='assets/gfx/svg/icon-logout.svg'|svg:'w-4 h-4'|noescape}
                                            Odhlásit se
                                            </a></li>
                                    </ul>
                                </div>
                            </li>
                        {else}
                            <li x-data="{ opened: false }" class="relative">
                                <span @click="opened = !opened" class="Btn px-0 inline-flex items-center gap-x-2">
                                    {='assets/gfx/svg/icon-user-na.svg'|svg:'w-8 h-8 md:w-5 md:h-5'|noescape}
                                    <span class="hidden md:inline">Přihlásit se</span>
                                </span>

                                <div @click.away="opened = false" x-show="opened" style="display: none" x-transition class="bg-white top-full mt-2 shadow absolute rounded-md py-4 px-4 min-w-[350px] right-0">
                                    
                                    <h3 class="text-h3 relative mb-5">Přihlásit se</h3>
                                    <form action="">
                                        <div class="mb-5">
                                            <label for="login-email" class="block font-medium text-gray-700 text-base">Váš e-email</label>
                                            <div class="mt-1">
                                                <input id="login-email" name="login-email" type="text" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                            </div>
                                        </div>

                                        <div class="mb-5">
                                            <label for="login-pwd" class="block font-medium text-gray-700 text-base">Heslo</label>
                                            <div class="mt-1">
                                                <input id="login-pwd" name="login-pwd" type="password" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                            </div>
                                        </div>

                                       

                                        <div class="flex justify-between">
                                            <a href="" class="underline text-gray-400 text-sm">Zapomenuté heslo</a>    
                                            <button type="submit" class="Btn -Black">Přihlásit se</button>
                                        </div>

                                        <div class="text-sm border-t border-gray-200 pt-5 mt-5">
                                            Pokud u nás ještě nemáte účet, <a href="" class="text-gray-400 underline ">zaregistrujte se</a> a získejte výhody s registrací spojené 👍
                                        </div>

                                    </form>
                                </div>
                            </li>
                        {/if}


                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
