<div 
    x-data="{ currentAirportId: 0, setAirport(id) {
        this.currentAirportId = id
    } }"
    class="grid  gap-10 relative">

        {* bird *}
        {='assets/gfx/svg/bird.svg'|svg:'Bird1 w-8 h-8 absolute top-[-80px] right-0 lg:right-[-30px] rotate-[-10deg] stroke-_blue'|noescape}
        {='assets/gfx/svg/bird.svg'|svg:'Bird2 w-8 h-8 absolute top-[-110px] right-[10px] lg:right-[-60px] rotate-[-30deg] stroke-_blue-dark'|noescape}

        <div>
            <div class="mx-auto w-[300px] md:w-[600px] my-5">
                <select @change="() => { if ($el.value) { location.href = $el.value }}" class=" block form-select !text-lg">
                    <option value="" class="!text-gray-500">{_}Zvolte m√≠sto odletu{/_}</option>
                    {foreach $list as $airport}
                        <option value="{plink Airport:detail $airport->id}" >{$airport->name}</option>
                    {/foreach}
                </select>
            </div>
        </div>

        <div class="hidden md:block">

            <span class="relative block max-w-[1000px] mx-auto">
                <img src="/assets/gfx/svg/cz.svg" alt="" />
                
                {foreach $list as $airport}
                    <a 
                        @mouseover="setAirport({$airport->id})" 
                        @mouseout="setAirport(0)" 
                        href="{plink Airport:detail $airport->id}" 
                        :class="{ '-Active bg-gray-100': {$airport->id} == currentAirportId }"
                        class="Point group absolute pointer inline-flex items-center gap-2 rounded-full px-4 py-1" 
                        style="top: {$airport->map_y|noescape}%; left: {$airport->map_x|noescape}%;">
                        <div 
                            :class="{ '!bg-blue-600 !text-blue-700': {$airport->id} == currentAirportId }"
                            class="block bg-_yellow/100 ring-4 ring-_yellow/100  w-1.5 h-1.5 rounded-full"></div>
                        <div 
                            class="text-sm  text-white"
                            :class="{ ' !text-blue-700': {$airport->id} == currentAirportId }"
                            >
                                {$airport->name}
                            </div>
                    </a>
                {/foreach}

            </span>

        </div>
        {* <div class="md:col-span-2">
