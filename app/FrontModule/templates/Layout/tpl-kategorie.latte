                            <div class="grid grid-cols-4 gap-3  auto-rows-fr">

                                {var $categories = [

                                    'Letadla',
                                    'Přístroje a příslušenství',
                                    'Spoluvlastnictví letadel',
                                    'Vrtule a motory',
                                ]}

                                {foreach $categories as $cat}
                        
                                    <a href="" class="
                                        bg-white border border-gray-200 relative rounded-md
                                        bg-white  hover:shadow-md hover:shadow-slate-900/10 px-5 py-3 rounded
                                                                                
                                                transition-transform
                                                duration-200
                                                transform hover:-translate-y-1 hover:shadow-md
                                        
                                        ">
                                        <h3 class="text-h4 mb-0 flex gap-x-4 items-center">

                                            <div>
                                                {$cat}
                                                <div class="text-xs text-gray-500 font-light">
                                                    {var $rand = rand(60, 2000)}
                                                    {$rand}
                                                    {if $rand == 1}
                                                        inzerát
                                                    {elseif $rand < 5}
                                                        inzeráty
                                                    {else}
                                                        inzerátů
                                                    {/if}

                                                </div>
                                            </div>
                                        </h3>
                                        
                                    </a>
                                {/foreach}
                            
